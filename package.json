{
  "name": "validate-syntax-webpack-plugin",
  "version": "0.3.0",
  "description": "A Webpack plugin to validate the syntax in your bundles",
  "repository": "https://github.com/wesm87/validate-syntax-webpack-plugin.git",
  "author": "Wes Moberly <github.wes@mailhero.io>",
  "license": "MIT",
  "engines": {
    "node": ">= 6.4.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/**/*.js"
  ],
  "scripts": {
    "build": "rm -rf lib/* && babel src --out-dir lib --ignore types.js --no-comments",
    "lint": "eslint src",
    "prepublishOnly": "yarn build",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "acorn": "^5.5.3",
    "ramda": "^0.25.0",
    "source-map": "^0.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "confusing-browser-globals": "^2.0.0-next.9754a231",
    "eslint": "^4.19.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "flow-bin": "^0.68.0",
    "flow-typed": "^2.4.0",
    "webpack": "^4.1.1"
  },
  "peerDependencies": {
    "webpack": "^2.0.0 || ^3.0.0 || ^4.0.0"
  }
}
